<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meal App | Recipes</title>
    <link rel="stylesheet" href="../styles/style.css" />
    <script src="../scripts/theme.js" defer></script>
    <script src="../scripts/recipes.js" defer></script>
    <script src="../scripts/responsive.js" defer></script>
  </head>
  <body class="theme--light">
    <div class="container">
      <!-- ----------------------- Header Section ----------------------- -->
      <header>
        <div class="branding">
          <img
            src="/assets/logo-light.svg"
            alt="Site logo"
            class="logo"
            id="logo-img"
          />
        </div>
        <div class="nav-toggle-group hide-nav">
          <span class="close-nav-btn">&times;</span>
          <nav class="nav-links">
            <a class="current" href="/recipes">Recipes</a>
            <a href="/planner">Planner</a>
            <a href="/groceries">Groceries</a>
            <a href="/login">Login</a>
            <a id="theme-btn" class="theme" href="#">
              <img
                id="theme-icon"
                src="../assets/icon-theme-light.svg"
                alt="theme icon"
              />
              <button class="nav-toggle-btn toggle-nav">&#8801;</button>
            </a>
            <div class="user-login-details">
              <a class="user" href="#"><%= username %></a>
              <a class="user" href="/logout">Logout</a>
            </div>
          </nav>
        </div>
      </header>
      <!-- -----------X----------- Header Section -----------X----------- -->

      <!-- ----------------------- Hero Section ----------------------- -->
      <section class="hero">
        <h1>Recipes</h1>
        <input type="text" placeholder="&#128269; Search recipes..." />
      </section>
      <!-- -----------X----------- Hero Section -----------X----------- -->

      <!-- ----------------------- Pinned Section ----------------------- -->
      <section class="pinned">
        <div class="page-heading">
          <img src="/assets/icon-pin-light.svg" alt="Pin icon" id="pin-icon" />
          <h2>Pinned</h2>
        </div>
        <div class="cards">
          <div class="card"></div>
          <div class="card"></div>
          <div class="card"></div>
        </div>
      </section>
      <!-- -----------X----------- Pinned Section -----------X----------- -->

      <!--  ----------------------- Main Section ----------------------- -->
      <main>
        <h2>Recipes</h2>
        <div class="cards">
          <% for (var i = 0; i < recipes.length; i++) { %>
          <div class="card">
            <p><%= recipes[i].name %></p>
            <p><%= recipes[i].instructions %></p>
            <p><%= recipes[i].time_estimations %></p>
            <p class="user-input-recipe-ingredients">
              <%= JSON.stringify(recipes[i].ingredients) %>
            </p>
            <p><%= recipes[i].tags %></p>
          </div>
          <% } %>
        </div>
        <div class="btn-container recipe">
          <button id="add-recipe-btn">Add Recipe</button>
          <button id="estimate-cost-btn">Estimate Cost</button>
        </div>
      </main>
      <!--  -----------X----------- Main Section -----------X----------- -->

      <!-- ----------------------- Add Recipe Pop up ----------------------- -->
      <div class="toggle-popup-display">
        <section class="pop-up-container" id="add-recipe-popup">
          <div id="add-recipe" class="pop-up">
            <span class="close-btn" id="close-recipe-popup-btn">&times;</span>
            <p>Add Recipe</p>
            <form form action="/addRecipe" method="post">
              <!-- ---------- Recipe name ---------- -->
              <div class="recipe-name-group">
                <label for="recipe-name">Recipe Name:</label>
                <input
                  id="recipe-name"
                  type="text"
                  name="recipe-name"
                  minlength="2"
                  maxlength="100"
                  pattern="[A-Z|a-z|\d|\-|\w]{2,100}"
                  required
                />
              </div>
              <!-- ----X----- Recipe name ----X----- -->

              <!-- ---------- Recipe ingredients ---------- -->
              <div class="recipe-ingredients-group">
                <label>Ingredients:</label>
                <div class="recipe-ingredients">
                  <div class="recipe-ingredient-subgroup">
                    <input
                      type="text"
                      name="recipe-ingredient-1"
                      id="recipe-ingredient-1"
                      placeholder="Ingredient (e.g. flour)"
                      minlength="2"
                      maxlength="100"
                      pattern="[A-Z|a-z|\d|\-|\w]{2,100}"
                      required
                    />
                    <input
                      type="text"
                      name="recipe-amount-1"
                      id="recipe-amount-1"
                      placeholder="Amount (e.g. 250g)"
                      minlength="1"
                      maxlength="50"
                      required
                    />
                  </div>
                </div>
                <button id="add-recipe-ingredient-input-btn" type="button">
                  Add ingredient
                </button>
              </div>
              <!-- ----X----- Recipe ingredients ----X----- -->

              <!-- ---------- Recipe instructions ---------- -->
              <div class="recipe-instructions-group">
                <label for="recipe-instructions">Instructions:</label>
                <textarea
                  id="recipe-instructions"
                  name="recipe-instructions"
                  cols="30"
                  rows="10"
                  minlength="5"
                  required
                ></textarea>
              </div>
              <!-- ----X----- Recipe instructions ----X----- -->

              <!-- ---------- Recipe tags ---------- -->
              <div class="recipe-tags-group">
                <label for="recipe-tags">Tags:</label>
                <input
                  id="recipe-tags"
                  type="text"
                  name="recipe-tags"
                  minlength="2"
                  required
                />
              </div>
              <!-- ----X----- Recipe tags ----X----- -->

              <!-- ---------- Warning msg ---------- -->
              <div class="warning">
                <p>
                  <span>&#9432;</span>Please enter instructions and tags as a
                  comma separated list.
                </p>
              </div>
              <!-- ----X----- Warning msg ----X----- -->

              <!-- ---------- Estimate time ---------- -->
              <div class="recipe-time-estimation-group">
                <label for="recipe-time-estimation">Time Estimation:</label>
                <input
                  id="recipe-time-estimation"
                  type="text"
                  name="recipe-time-estimation"
                  minlength="1"
                  required
                />
              </div>
              <!-- ----X----- Estimate time ----X----- -->

              <!-- ---------- Submit ---------- -->
              <div class="submit-btn">
                <input type="submit" value="Add" />
              </div>
              <!-- ----X----- Submit ----X----- -->
            </form>
          </div>
        </section>
      </div>
      <!-- -----------X----------- Add Recipe Pop up -----------X----------- -->

      <!-- ----------------------- Estimate Cost Pop up ----------------------- -->
      <div class="toggle-popup-display">
        <section class="pop-up-container" id="estimate-cost-popup">
          <div id="estimate-cost" class="pop-up">
            <span class="close-btn" id="close-estimate-cost-popup-btn"
              >&times;</span
            >
            <p>Estimate Cost</p>
            <form action="#">
              <!-- ---------- Estimate recipe cost ---------- -->
              <div class="estimate-cost-recipe-group">
                <label for="estimate-cost-recipe">Select a Recipe:</label>
                <select
                  name="estimate-cost-recipe"
                  id="estimate-cost-recipe"
                  required
                >
                  <option value="" selected disabled>-Select a recipe-</option>
                  <option value="Wild mushroom mac 'n' cheese">
                    Wild mushroom mac 'n' cheese
                  </option>
                  <option value="Ndolé">Ndolé</option>
                  <option value="Chorizo & mozzarella gnocchi bake">
                    Chorizo & mozzarella gnocchi bake
                  </option>
                  <option value="Swedish meatball burgers">
                    Swedish meatball burgers
                  </option>
                </select>
              </div>
              <!-- ----X----- Estimate recipe cost ----X----- -->

              <!-- ---------- Estimate store cost ---------- -->
              <div class="estimate-cost-store-group">
                <label for="estimate-cost-store">Select a Store:</label>
                <select
                  name="estimate-cost-store"
                  id="estimate-cost-store"
                  required
                >
                  <option value="" selected disabled>-Select a store-</option>
                  <option value="Sainsbury's">Sainsbury's</option>
                  <option value="Tesco">Tesco</option>
                  <option value="Lidl">Lidl</option>
                  <option value="Morrisons">Morrsions</option>
                  <option value="M&S">M&S</option>
                  <option value="Aldi">Aldi</option>
                  <option value="Asda">Asda</option>
                  <option value="Iceland">Iceland</option>
                </select>
              </div>
              <!-- ----X----- Estimate store cost ----X----- -->

              <!-- ---------- Submit ---------- -->
              <div class="submit-btn">
                <input type="submit" value="Estimate" />
              </div>
              <!-- ----X----- Submit ----X----- -->
            </form>
          </div>
        </section>
      </div>
      <!-- -----------X----------- Estimate Cost Pop up -----------X----------- -->

      <!-- ----------------------- Add Recipe Result Pop up ----------------------- -->
      <% if (addRecipeResult) { %>
      <div>
        <section class="pop-up-container" id="add-recipe-result-popup">
          <div id="add-recipe-result" class="pop-up">
            <span class="close-btn" id="close-recipe-result-popup-btn"
              >&times;</span
            >
            <p><%= addRecipeResult %></p>
          </div>
        </section>
      </div>
      <% } %>
      <!-- -----------X----------- Add Recipe Result Pop up -----------X----------- -->
    </div>
  </body>
</html>
